<div>
  <form>
    <div class="form-group">
      <label for="studentName">Student name</label>
      {{input value=studentName id="studentName" class="form-control" placeholder="Tell us who you are!"}}
    </div>

    <div class="form-group">
      <label for="issue">What do you need help with?</label>
      {{textarea rows="5" value=issue id="issue" class="form-control" placeholder="Give a brief description of the issue you are having. :)"}}
    </div>

    <button {{action 'save'}} class="btn btn-xs btn-success">Submit ticket</button>
  </form>
</div>
